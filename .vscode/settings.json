{
  "vsicons.presets.angular": false,

  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,

  "prettier.singleQuote": true,
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.trailingComma": "all",

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/bower_components": true,
    "**/run/build/**": true,
    "**/*.bundle.js": true,
    "**/public/build/**": true
  }
}
